<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://www.jboss.org/dtd/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbn2ddl.auto">create</property>
        <property name="show_sql">true</property>
        
    	<mapping package="nl.moukail.streamtv.entity" class="Category" />
        <mapping package="nl.moukail.streamtv.entity" class="Channel" />
        <mapping package="nl.moukail.streamtv.entity" class="Tv" />
        <mapping package="nl.moukail.streamtv.entity" class="Radio" />
        <mapping package="nl.moukail.streamtv.entity" class="Country" />
        <mapping package="nl.moukail.streamtv.entity" class="Schedule" />
        <mapping package="nl.moukail.streamtv.entity" class="Language" />
        <mapping package="nl.moukail.streamtv.entity" class="Stream" />
        <mapping package="nl.moukail.streamtv.entity" class="Vod" />
        <mapping package="nl.moukail.streamtv.entity" class="Video" />
        <mapping package="nl.moukail.streamtv.entity" class="Film" />
        <mapping package="nl.moukail.streamtv.entity" class="Episode" />
        <mapping package="nl.moukail.streamtv.entity" class="Serie" />
        <mapping package="nl.moukail.streamtv.entity" class="nl.moukail.streamtv.entity.User" />
    </session-factory>
</hibernate-configuration>